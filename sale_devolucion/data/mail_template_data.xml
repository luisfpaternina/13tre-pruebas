<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
      <record id="sale_devolucion_email_template" model="mail.template">
        <field name="name">Devolución</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="email_from">${object.company_id.partner_id.email}</field>
        <field name="subject">Pedido Devuelto - ${object.name}</field>
        <field name="email_to">${object.company_id.partner_id.email}</field>
        <field name="auto_delete" eval="False"/>
        <field name="lang">es_ES</field>
        <field name="body_html" type="xml">
          <DIV>El cliente  ${object.partner_id.name} ha pedido la devolución del pedido ${object.name}</DIV>
          <BR/>
          <DIV><B>Motivo devolución: </B> ${object.motivo_devolucion}</DIV>
          <DIV><B>Cantidad a devolver: </B> ${object.cantidad_devolver}</DIV>
        </field>
      </record>
    </data>
</odoo>
