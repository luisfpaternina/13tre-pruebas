<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_helpdesk_tool_model_search" model="ir.ui.view">
        <field name="name">view.helpdesk_tool_model.search</field>
        <field name="model">helpdesk.tool.model</field>
        <field name="arch" type="xml">
            <search string="Helpdesk Tool Model Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="tool_brand_id"/>
            </search>
        </field>
    </record>

    <record id="view_helpdesk_tool_model_form" model="ir.ui.view">
        <field name="name">view.helpdesk_tool_model.form</field>
        <field name="model">helpdesk.tool.model</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Tool Model">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main">
                        <field name="tool_brand_id"/>
                        <field name="active" invisible="1"/>
                    </group>
                    <separator string="Services and vehicles"/>
                    <field name="service_vehicle_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="vehicle_brand_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_tool_model_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_tool_model.tree</field>
        <field name="model">helpdesk.tool.model</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Tool Models">
                <field name="name"/>
                <field name="tool_brand_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_helpdesk_tool_model" model="ir.actions.act_window">
        <field name="name">Tool models</field>
        <field name="res_model">helpdesk.tool.model</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_helpdesk_tool_model_search"/>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new tool model
                </p>
        </field>
    </record>

    <menuitem id="menu_helpdesk_tool_model" action="action_helpdesk_tool_model"
        sequence="10" parent="helpdesk.helpdesk_menu_config"/>

</odoo>


