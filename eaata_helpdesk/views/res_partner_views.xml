<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_view_form_inherit" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="support_active"/>
            </field>
            <notebook position="inside">
                <page string="Tools" name="tools">
                    <field name="tool_ids">
                        <tree editable="bottom" string="Tools">
                            <field name="tool_brand_id"/>
                            <field name="tool_model_id"/>
                            <field name="name"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="support_active"/>
                            <field name="fecha_actualizacion"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>


