<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_sale_order_town_form" model="ir.ui.view">
			<field name="name">view.sale.order.town.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_shipping_id']" position="after">
					<field name="town_id" options="{'no_create_edit': True, 'no_quick_create': True}"/>
				</xpath>
			</field>
		</record>

		<record id="view_quotation_town_tree" model="ir.ui.view">
			<field name="name">view.quotation.town.tree</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_quotation_tree"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='expected_date']" position="after">
					<field name="town_id" readonly="1"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
 