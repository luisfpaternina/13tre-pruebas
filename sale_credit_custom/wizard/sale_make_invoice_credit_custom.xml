<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_advance_credit_custom" model="ir.ui.view">
        <field name="name">Sale Credit</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group[1]" position="after">
                <group string="Credit Payment">
                    <field name="partner_id" invisible="1"/>
                    <field name="payment_credit"/>
                    <field name="credit" attrs="{'invisible': [('payment_credit', '=', False)], 'required': [('payment_credit', '=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
