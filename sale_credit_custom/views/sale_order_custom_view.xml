<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_custom" model="ir.ui.view">
            <field name="name">sale_order_custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="after">
                    <div>
                        <field name="warning" invisible="1"/>
                    </div>
                    <div class="alert alert-warning" role="alert" attrs="{'invisible': ['|', ('warning', '=', False), ('partner_id', 'in', [False, None])]}">
                        This customer has an active credit available
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>