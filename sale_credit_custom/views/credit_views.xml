<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="credit_form_sale_view">
            <field name="name">credit_inherit form</field>
            <field name="model">credit</field>
            <field name="inherit_id" ref="allocation_of_credit_amount.credit_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="invoice_lines" string="Invoice Lines">
                        <field name="invoice_ids" readonly="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
