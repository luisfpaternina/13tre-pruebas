<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="invoice_view_credit_form" model="ir.ui.view">
            <field name="name">invoce view credit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="credit_payment"/>
                    <field name="credit" attrs="{'invisible': [('credit_payment', '=', False)], 'required': [('credit_payment', '=', True)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
