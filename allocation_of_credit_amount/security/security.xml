<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.module.category" id="module_allocation_of_credit_amount">
        <field name="name">Allocation of Credit</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="allocation_of_credit_amount.module_allocation_of_credit_amount"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="allocation_of_credit_amount.module_allocation_of_credit_amount"/>
        <field name="implied_ids" eval="[(4, ref('allocation_of_credit_amount.group_user'))]"/>
    </record>

</odoo>
