<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_credit_view_form" model="ir.ui.view">
            <field name="name">res.partner.credit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='internal_notes']" position="before">
                    <page name="credits" string="Credits" groups="allocation_of_credit_amount.group_manager,allocation_of_credit_amount.group_user">
                        <group>
                            <field name="credit_ids" nolabel="1" widget="one2many_list">
                                <tree>
                                    <field name="res_partner_id" invisible="1"/>
                                    <field name="number_credit"/>
                                    <field name="credit_type_id"/>
                                    <field name="sponsoring_entity_id" attrs="{'invisible': [('credit_type_id', '=', False)]}"/>
                                    <field name="modality"/>
                                    <field name="credit_limit"/>
                                    <field name="available_balance" optional="hide" readonly="1"/>
                                    <field name="state" optional="hide" readonly="1"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
