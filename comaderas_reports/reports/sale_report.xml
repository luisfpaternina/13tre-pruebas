<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
       
        <template id="report_comaderas_sale_order">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                        <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" width="115" height="90"/>
                        <p style="font-size:10vw">
                            <span t-field="o.company_id"></span><br></br>
                            <span>NIT:</span><span t-field="o.company_id.vat"></span><br></br>
                            <span t-field="o.company_id.street"></span><br></br>
                            <span>RESPONSABLE DE IVA - TARIFA ICA 8 X 1000</span><br></br>
                            <span>NO SOMOS GRANDES CONTIBUYENTES ACTIVIDAD ECONOMICA 4752</span><br></br>
                            <span t-field="o.company_id.phone"></span>
                        </p>
                    </div>
                    <div class="article o_report_layout_standard">
                        <div class="page">
                            <style>
                                div#separador{
                                width:900px;
                                height:100px;
                                background-color:white;
                                float:left;
                                }
                                div#cuadro{
                                width:250px;
                                height:20px;
                                background-color:white;
                                float:left;
                                }
                                hr.new5 {
                                border: 1px solid black;
                                border-radius: 1px;
                                }
                            </style>
                        <br></br><br></br>
                        <h2 class="mt16">
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="o.state not in ['draft','sent']">Order # </span>
                                <span t-if="o.state in ['draft','sent']">Cotización # </span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Pro-Forma # </span>
                            </t>
                                <span t-field="o.name"/>
                        </h2>
                    <div>
                        <strong>Cliente:</strong><span> </span><span t-field="o.partner_id"></span><br></br>
                        <strong>Dirección:</strong><span> </span><span t-field="o.partner_id.street"></span><br></br>
                        <strong>CC/NIT:</strong><span> </span><span t-field="o.partner_id.vat"></span><br></br>
                        <strong>Télefono:</strong><span> </span><span t-field="o.partner_id.phone"></span><br></br>
                        <strong>Ciudad:</strong><span> </span><span t-field="o.partner_id.town_id"></span>
                    </div>

                <div class="row mt32 mb32" id="informations">
                <div t-if="o.client_order_ref" class="col-auto mw-100 mb-2">
                    <strong>Your Reference:</strong>
                    <p class="m-0" t-field="o.client_order_ref"/>
                </div>
                <div t-if="o.date_order and doc.state not in ['draft','sent']" class="col-auto mw-100 mb-2">
                    <strong>Order Date:</strong>
                    <p class="m-0" t-field="o.date_order"/>
                </div>
                <div t-if="o.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                    <strong>Quotation Date:</strong>
                    <p class="m-0" t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                </div>
                <div t-if="o.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2" name="expiration_date">
                    <strong>Expiration:</strong>
                    <p class="m-0" t-field="o.validity_date"/>
                </div>
                <div t-if="o.user_id.name" class="col-auto mw-100 mb-2">
                    <strong>Salesperson:</strong>
                    <p class="m-0" t-field="o.user_id"/>
                </div>
            </div>
             <t t-set="display_discount" t-value="any([l.discount for l in o.order_line])"/>

            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th name="th_description" class="text-left">Description</th>
                        <th name="th_quantity" class="text-right">Quantity</th>
                        <th name="th_priceunit" class="text-right">Unit Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-right">Taxes</th>
                        <th name="th_subtotal" class="text-right">
                            <t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                            <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="o.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name"><span t-field="line.name"/></td>
                                <td name="td_quantity" class="text-right">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td name="td_priceunit" class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                <td name="td_taxes" class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>
                                <td name="td_subtotal" class="text-right o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal" style="">
                                <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                <td name="td_amount_untaxed" class="text-right">
                                    <span t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[5] == 1 and o.amount_untaxed == amount_by_group[2]">
                                        <td name="td_amount_by_group_label_3">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}"/></span>
                                        </td>
                                        <td name="td_amount_by_group_3" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td name="td_amount_by_group_label">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td name="td_amount_total_label"><strong>Total</strong></td>
                                <td name="td_amount_total" class="text-right">
                                    <span t-field="o.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

                    </div>
                    </div>
                    <div class="footer">
                        <p style="font-size:12px" align="justify">
                            <span t-field="o.company_id.sale_terms"></span>
                        </p>
                    </div>
                </t>
            </t>
        </template>
        
        <report
                id="report_print_comaderas_sale_order"
                string="Orden de venta comaderas"
                model="sale.order"
                report_type="qweb-pdf"
                name="comaderas_reports.report_comaderas_sale_order"
        />

        <record id="comaderas_reports.report_print_comaderas_sale_order" model="ir.actions.report">
            <field name="paperformat_id" ref="comaderas_reports.paperformat_a4_comaderas"/>
        </record>

  </data>
</odoo>
