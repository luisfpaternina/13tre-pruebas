<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.form.view</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">

            <field name="partner_id" position="after">
                <field name="partner_id2"/>
            </field>

            <notebook position="inside">
                <page string="Tools" name="tools">
                    <field name="tool_ids">
                        <tree editable="bottom" string="Tools">
                            <field name="tool_brand_id"/>
                            <field name="tool_model_id"/>
                            <field name="name"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="support_active"/>
                            <field name="fecha_actualizacion"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>