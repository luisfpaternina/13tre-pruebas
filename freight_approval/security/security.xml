    <record id="group_manager_sale_approval" model="res.groups">
        <field name="name">Approver</field>
        <field name="category_id" ref="freight_approval.module_sale_order_approval"/>
        <field name="implied_ids" eval="[(4, ref('freight_approval.group_user_sale_approval'))]"/>
    </record>

</odoo>
