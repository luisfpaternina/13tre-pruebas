<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_invoice_view_form_surcharge_discount" model="ir.ui.view">
            <field name="name">account.invoice.view.form.surcharge.discount</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority">200</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="after">
                    <field name="discount_amount" optional="show"/>
                    <field name="apply_discount" optional="show"/>
                </xpath>

                <xpath expr="//field[@name='amount_untaxed']" position="before">
                    <field name="total_without_sur_disc" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                    <field name="amount_discount" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                    <field name="amount_surchange" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                </xpath>
                <xpath expr="//field[@name='narration']" position="after">
                    <div>
                        <label for="discount_type" string="Discount Type :" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                        <field name="discount_type" class="oe_inline" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                    </div>
                    <div>
                        <label for="discount_rate" string="Discount Rate :" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                        <field name="discount_rate" class="oe_inline" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                    </div>
                    <div>
                        <label for="apply_global_discount" string="Apply Global Discount:" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                        <field name="apply_global_discount" class="oe_inline" attrs="{'invisible': [('type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
