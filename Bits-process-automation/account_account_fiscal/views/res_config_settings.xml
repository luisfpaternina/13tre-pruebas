<?xml version='1.0' encoding="utf-8"?>
<odoo>
    <record id="account_account_niif_settings_view_form" model="ir.ui.view">
        <field name="name">account.account.niif.settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="120"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_vendor_bills']" position="after">
                <h2>Account Homologation</h2>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                      <div class="mt8">
                          <field name="use_account_homologation"/>
                      </div>
                    </div>
                    <div class="o_setting_right_pane">
                      <span class="o_form_label">Use Account Homologation</span>
                      <div class="text-muted">
                        Check if you want use account homologation
                      </div>
                    </div>
                  </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>