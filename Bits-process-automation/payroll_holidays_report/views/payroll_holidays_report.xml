<odoo>
    <data>
        <template id="payroll_holidays_template_header">
            <div class="header">
                <div class="row no-gutters">
                    <div class="row">
                        <div class="col-12 text-left" style="max-height:160px;">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" alt="Logo" height="160"/>
                        </div>
                    </div>
                </div>
            </div>

            <div t-attf-class="article"
                t-att-data-oe-model="o and o._name"
                t-att-data-oe-id="o and o.id"
                t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0" />
            </div>

            <div class="footer">
                <div class="container-s" style="background-color:#002b49">
                    <div class="row">
                        <div class="col-12" align="center">
                            <img 
                                src="https://bitsdrupal.bitsamericas.co/sites/default/files/cards/logowhite.png"
                                alt="Logo"   
                            />
                        </div>
                    </div>
                    <div class="row-2">
                        <div class="col-13" align="center">
                            <h6
                                style="color:white"
                                t-field="o.text_copyright" />
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="payroll_holidays_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="payroll_holidays_report.payroll_holidays_template_header">
                        <div class="page">
                            <div class="container" align="left">
                                <div class="col-12">
                                    <div class="row">
                                        <p class="h4 font-weight-bold">
                                            BOGOTA, <span t-field="o.date_now"/>
                                        </p>
                                    </div>
                                    <div class="row">
                                        <p class="h5">
                                            <span class="font-weight-bold">Sr. </span><span t-esc="o.employee_id.name" class="font-weight-bold"/>
                                            identificado con el numero de documento: 
                                            <span class="font-weight-bold" t-esc="o.employee_id.identification_id"/>
                                        </p>
                                    </div>
                                    <div class="row">
                                        <blockquote class="blockquote">
                                            <p class="text-justify">
                                                Le informamos que usted sale a disfrutar de los siguientes periodos de vacaciones:
                                                Periodo causado 
                                                entre el <span t-field="o.period_start_date"/>
                                                hasta el <span t-field="o.period_finish_date"/>.
                                                Vacaciones a partir de: el <span t-field="o.start_holidays"/>
                                                hasta el <span t-field="o.end_holidays"/>. 
                                            </p>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                            <div class="container" align="center">
                                <div class="row">
                                    <table class="table table-bordered" style="width:100%">
                                        <thead>
                                            <tr style="background-color:#002b49" alling="left">
                                                <th colspan="4">
                                                    <strong style="color:white; font-size:100%">
                                                        INFORMACIÓN BÁSICA DEL EMPLEADO
                                                    </strong>
                                                </th>
                                            </tr>
                                        </thead>

                                        <tbody align="left">
                                            <tr>
                                                <th style="width:20%">
                                                    Cedula:
                                                </th>
                                                <td style="width:30%">
                                                    <h6 t-field="o.employee_id.identification_id" />
                                                </td>
                                                <th style="width:20%">
                                                    Nombre:
                                                </th>
                                                <td style="width:30%">
                                                    <h6 t-field="o.employee_id.name"></h6>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Cargo:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.job_id" />
                                                </td>
                                                <th>
                                                    Entidad Bancaria:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.address_id.bank_ids.bank_id"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Nro. Cuenta:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.address_id.bank_ids.acc_number"/>
                                                </td>
                                                <th>
                                                    Aporte Salud:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.health"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Fondo Pension:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.pension" />
                                                </td>
                                                <th>
                                                    Salario:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.contract_id.wage" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <table class="table table-bordered table-sm" style="width:100%">
                                        <thead>
                                            <tr style="background-color:#002b49" align="left">
                                                <th colspan="5">
                                                    <strong style="color:white;font-size:100%">
                                                        DETALLE DEL PAGO EMPLEADO
                                                    </strong>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>ID</th>
                                                <th>CONCEPTO</th>
                                                <th>UNIDADES</th>
                                                <th>DEVENGOS</th>
                                                <th>DEDUCCIONES</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="accrual" t-value="0"/>
                                            <t t-set="deductions" t-value="0"/>
                                            <tr t-foreach="o.line_ids.filtered(lambda line: line.salary_rule_id.appears_on_holidays)" t-as="line">
                                                <td>
                                                    <span t-field="line.code"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td align="right">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td align="right">
                                                    <span t-if="line.total > 0" t-esc="line.total"
                                                        t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                        <t t-if="line.total > 0" t-set="accrual" t-value="accrual + line.total"/>
                                                </td>
                                                <td align="right">
                                                    <span t-if="0 >= line.total" t-esc="line.total"
                                                        t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                        <t t-if="0 >= line.total" t-set="deductions" t-value="deductions + line.total"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="background-color:#002b49" t-att-colspan="3">
                                                    <strong style="color:white;font-size:100%">
                                                    Totales:
                                                    </strong>
                                                </td>
                                                <td align="right">
                                                    <strong t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                                        t-esc="accrual"/>
                                                </td>
                                                <td align="right">
                                                    <strong t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                                        t-esc="deductions"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="background-color:#002b49" t-att-colspan="4">
                                                    <strong style="color:white;font-size:100%">
                                                    Neto a pagar:
                                                    </strong>
                                                </td>
                                                <td align="right">
                                                    <strong t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                                        t-esc="deductions + accrual"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>