<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!--Begin View Tree-->
    <record id="account_payment_flow_stage_tree" model="ir.ui.view">
        <field name="name">account_payment_flow_stage_tree</field>
        <field name="model">account.payment.flow.stage</field>
        <field name="arch" type="xml">

            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="partner_id" />
                <field name="fold" />
                <field name="close" />
            </tree>

        </field>
    </record>
    <!--End View Tree-->

    <!--Begin View Form-->
    <record id="account_payment_flow_stage_form" model="ir.ui.view">
      <field name="name">account_payment_flow_stage_form</field>
      <field name="model">account.payment.flow.stage</field>
      <field name="arch" type="xml">

        <form string="Payment Flow Stage" class="o_form_project_tasks">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="sequence"/>
                <field name="template_id"/>
                <field name="team_ids" widget="many2many_tags">
                  <tree>
                      <field name="group"/>
                  </tree>
                </field>
              </group>
              <group>
                <field name="close"/>
                <field name="fold"/>
                <field name="partner_id"/>
              </group>
            </group>
          </sheet>
        </form>

      </field>
    </record>
    <!--End View Form-->

  </data>
</odoo>