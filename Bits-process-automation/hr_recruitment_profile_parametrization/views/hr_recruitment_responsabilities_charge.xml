<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!--Begin View Tree-->
    <record id="hr_recruitment_responsabilites_charge_tree" model="ir.ui.view">
        <field name="name">hr.recruitment.responsabilities.charge.tree</field>
        <field name="model">hr.recruitment.responsabilities.charge</field>
        <field name="arch" type="xml">

            <tree>
                <field name="name" />
                <field name="code" />
                <field name="description" />
                <field name="active" />
            </tree>

        </field>
    </record>
    <!--End View Tree-->

    <!--Begin View Form-->
    <record id="hr_recruitment_responsabilities_charge_form" model="ir.ui.view">
      <field name="name">hr.recruitment.responsabilities.charge.form</field>
      <field name="model">hr.recruitment.responsabilities.charge</field>
      <field name="arch" type="xml">

        <form string="Recruitment Responsabilities Charge" class="o_form_project_tasks">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="active"/>
              </group>
            </group>
          </sheet>
        </form>

      </field>
    </record>
    <!--End View Form-->

  </data>
</odoo>