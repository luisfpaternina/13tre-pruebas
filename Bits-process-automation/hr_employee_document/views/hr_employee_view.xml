<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_document_form" model="ir.ui.view">
        <field name="name">view.employee.document.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="documents_employee" string="Documents">
                    <field name="documents_employee_ids">
                        <tree editable="bottom" string="Lines Documents">
                            <field name="document_type_id"/>
                            <field name="amount_contributibe"/>
                            <field name="expiration_date"/>
                            <field name="state"/>
                            <field name="description"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>