<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="hr_payroll_flat_file_parafiscal_form">
        <field name="name">hr.payroll.flat.file.parafiscal.form</field>
        <field name="model">account.flat.file.base</field>
        <field name="arch" type="xml">
            <form string="Flat File Parafiscale">
                <group>
                    <group>
                        <field name="template_modality"/>
                        <field name="template_type" />
                        <field name="associated_template_number" attrs="{'invisible': [('template_type', 'not in', ['U', 'F', 'N'])]}"/>
                    </group>
                    <group>
                        <field name="period_1"/>
                        <field name="period_2"/>
                        <field name="payment_date_associated_template" attrs="{'invisible': [('template_type', 'not in', ['U', 'F', 'N'])]}"/>
                        <field name="file_extension"/>
                    </group>
                    <group>
                        <field name="file_filename" invisible="1"/>
                        <field name="file_binary" filename="file_filename" readonly="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Filters">
                        <group>
                            <group>
                                <label for="date_from" string="Period"/>
                                <div>
                                    <field name="date_from" required="1"/>
                                    <field name="date_to" required="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="struct_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button name="export_flat_file" string="Export Flat File" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_hr_payroll_flat_file_parafiscal" model="ir.actions.act_window">
        <field name="name">Flat File Parafiscales</field>
        <field name="res_model">account.flat.file.base</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_payroll_flat_file_parafiscal_form"/>
        <field name="context" eval="{'default_file_type':'get_collect_data_parafiscal','flat_file_payroll':True}"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_hr_payroll_flat_file_parafiscal" parent="hr_payroll.menu_hr_payroll_payslips" action="action_hr_payroll_flat_file_parafiscal" sequence="82"/>

</odoo>