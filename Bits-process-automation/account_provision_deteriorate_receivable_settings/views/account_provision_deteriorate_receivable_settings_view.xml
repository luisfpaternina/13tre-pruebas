<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_provision_deteriorate_receivable_settings_form_view" model="ir.ui.view">
            <field name="name">account.provision.deteriorate.receivable.settings.form.view</field>
            <field name="model">account.provision.deteriorate.receivable.settings</field>
            <field name="arch" type="xml">
                <form string="Provision Deteriorate Receivable Settings">
                    <sheet>
                        <group>
                            <group>
                                <field name="accounting_type"/>
                                <field name="number_days"/>
                                <field name="journal_id"/>
                                <field name="expense_account_id"/>
                            </group>
                            <group>
                                <field name="percentage"/>
                                <field name="first_day"/>
                                <field name="recovery_account_id"/>
                                <field name="accumulation_account_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_provision_deteriorate_receivable_settings_tree_view" model="ir.ui.view">
            <field name="name">account.provision.deteriorate.receivable.settings.tree.view</field>
            <field name="model">account.provision.deteriorate.receivable.settings</field>
            <field name="arch" type="xml">
                <tree string="Provision Deteriorate Receivable Settings">
                    <field name="accounting_type"/>
                    <field name="number_days"/>
                    <field name="first_day"/>
                    <field name="percentage" widget="progressbar"/>
                    <field name="journal_id" optional="show"/>
                    <field name="expense_account_id" optional="show"/>
                    <field name="recovery_account_id" optional="show"/>
                    <field name="accumulation_account_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="provision_deteriorate_receivable_settings_action" model="ir.actions.act_window">
            <field name="name">Provision Deteriorate Receivable Settings</field>
            <field name="res_model">account.provision.deteriorate.receivable.settings</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_provision_deteriorate_receivable_settings"
            action="provision_deteriorate_receivable_settings_action"
            name="Provision Deteriorate Receivable"
            sequence="153"
            parent="account.account_account_menu"/>
    </data>
</odoo>