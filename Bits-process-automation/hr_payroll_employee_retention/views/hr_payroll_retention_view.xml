<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hr_payroll_retention_view">
        <field name="name">hr.payroll.retention.view</field>
        <field name="model">hr.payroll.retention</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title pr-0">
                        <label for='name'>name</label>

                        <h2>
                            <field name="name" required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group></group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Retention Items">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="salary_rule_ids" widget="many2many_tags"/>
                                    <field name="uvt_maximum"/>
                                    <field name="maximum_percentage"/>
                                    <field name="document_code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="hr_payroll_retention_tree" model="ir.ui.view">
        <field name="name">hr.payroll.retention.tree</field>
        <field name="model">hr.payroll.retention</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Retentions">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="action_payroll_retention" model="ir.actions.act_window">
        <field name="name">Retention Configuration</field>
        <field name="res_model">hr.payroll.retention</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new Retention Configuration
            </p>
        </field>
    </record>
    <menuitem id="menu_payroll_retention" action="action_payroll_retention" parent="hr_payroll_employee_retention.menu_parameters_retention_configuration" name="Retention Configuration" />
</odoo>