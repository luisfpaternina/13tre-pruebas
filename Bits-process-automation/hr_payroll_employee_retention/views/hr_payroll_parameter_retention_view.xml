<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="hr_payroll_parameter_retention_view">
        <field name="name">hr.payroll.parameter.retention.view</field>
        <field name="model">hr.payroll.parameter.retention</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title pr-0">
                        <label for='name'>name</label>

                        <h2>
                            <field name="name" required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="year"/>
                            <field name="transportation_allowance"/>
                            <field name="uvt"/>
                            <field name="maximum_food_salary"/>
                            <field name="solidarity_cap"/>
                            <field name="exempt_income_cap"/>
                            <field name="dependent_certificate_cap" />
                            <field name="uvt_allowed"/>
                            <field name="country_parameter" required="1" options="{'no_create': True,'no_open':True}"/>
                        </group>
                        <group>
                            <field name="minimum_wage"/>
                            <field name="minimum_integral"/>
                            <field name="exempt_cap"/>
                            <field name="housing_cap"/>
                            <field name="top_income_previous_year"/>
                            <field name="cap_health" />
                            <field name="social_security_cap"/>
                            <label for="check_figure"/>
                            <div>
                                <field name="check_figure" required="1"/>
                                <span class="o_form_label oe_inline">%</span>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hr_payroll_parameter_retention_tree" model="ir.ui.view">
        <field name="name">hr.payroll.parameter.retention.tree</field>
        <field name="model">hr.payroll.parameter.retention</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Law Parameters">
                <field name="name"/>
                <field name="year"/>
                <field name="minimum_wage"/>
                <field name="transportation_allowance"/>
                <field name="minimum_integral"/>
                <field name="uvt"/>
                <field name="exempt_cap"/>
                <field name="maximum_food_salary"/>
                <field name="housing_cap"/>
                <field name="solidarity_cap"/>
                <field name="top_income_previous_year"/>
                <field name="exempt_income_cap"/>
                <field name="cap_health" />
                <field name="dependent_certificate_cap" />
                <field name="social_security_cap"/>
                <field name="country_parameter"/>
            </tree>
        </field>
    </record>
    <record id="action_payroll_parameter_retention" model="ir.actions.act_window">
        <field name="name">Law Parameters</field>
        <field name="res_model">hr.payroll.parameter.retention</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new Law Parameters 
            </p>
        </field>
    </record>
    <menuitem id="menu_parameters_retention_configuration" name="Parameters Retention" parent="hr_payroll.menu_hr_payroll_configuration" sequence="150"/>
    <menuitem id="menu_payroll_parameter_retention" action="action_payroll_parameter_retention" parent="menu_parameters_retention_configuration" name="Law Parameters" />
</odoo>