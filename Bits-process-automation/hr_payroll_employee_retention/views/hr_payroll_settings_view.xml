<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payroll_parameter_retention_settings" model="ir.ui.view">
        <field name="name">hr.payroll.news.parameter.retention.settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="80"/>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                <h2>Law Parameters</h2>
                <div class="row mt16 o_settings_container" id="hr_payroll_parameter_retention_settings">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Parameter Retention" for="parameter_retention_id" class="col-lg-3 o_light_label"/>
                            <field name="parameter_retention_id" options="{'no_create':True,'no_open':True}"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="withholding_wage_rule_id" class="col-lg-3 o_light_label"/>
                            <field name="withholding_wage_rule_id" options="{'no_create':True,'no_open':True}"/>
                        </div>
                    </div>
                </div>
                <h2>Truncate Retentions</h2>
                <div class="row mt16 o_settings_container" id="hr_payroll_employee_retention_settings">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Truncate Date" for="date_truncate" class="col-lg-3 o_light_label"/>
                            <field name="date_truncate" options="{'no_create':True,'no_open':True}"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Execute Date" for="date_execute" class="col-lg-3 o_light_label"/>
                            <field name="date_execute" options="{'no_create':True,'no_open':True}"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Last Execute" for="str_date_prev" class="col-lg-3 o_light_label"/>
                            <field name="str_date_prev" options="{'no_create':True,'no_open':True}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
