<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>
        <record id="view_hr_recruitment_score_profile_tree" model="ir.ui.view">
            <field name="name">hr.recruitment.score.profile.tree</field>
            <field name="model">hr.recruitment.score.profile</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="profile">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_recruitment_score_profile_form" model="ir.ui.view">
            <field name="name">Profile</field>
            <field name="model">hr.recruitment.score.profile</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="profile">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="name" required="1" placeholder="name"/></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tecnology_id" required="1"/>
                                <field name="code" required="1"/>
                                <field name="description" required="1"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="calculated_total"/>
                                <field name="weighted_average" invisible="True"/>
                                <field name="weighted_average_related" force_save="1" readonly="True"/>
                                <field name="total_items"/>
                            </group>
                        </group>
                        <field name="profile_line_ids">
                            <tree editable="bottom">
                                <field name="skill_id"/>
                                <field name="percentage"/>
                                <field name="margen" widget="progressbar"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_hr_recruitment_score_profile">
            <field name="name">Profiles</field>
            <field name="res_model">hr.recruitment.score.profile</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create profile
                </p>
            </field>
        </record>

        <record id="sequence_hr_recruitment_score_profile" model="ir.sequence">
           <field name="name">Sequence Profile</field>
           <field name="code">score.profile</field>
           <field name="active">TRUE</field>
           <field name="prefix"></field>
           <field name="padding">6</field>
           <field name="number_next">1</field>
           <field name="number_increment">1</field>
        </record>

        <menuitem 
            id="nemu_hr_recruitment_knowledge_tests" 
            name="knowledge tests" 
            parent="hr_recruitment.menu_hr_recruitment_configuration" 
            action="action_view_hr_recruitment_score_profile" 
            sequence="95"/>

        <menuitem 
            id="nemu_hr_recruitment_score_profile" 
            name="Profile" 
            parent="hr_recruitment_score_profile.nemu_hr_recruitment_knowledge_tests"
            action="action_view_hr_recruitment_score_profile" 
            sequence="96"/>           
    </data>
</odoo>
       

