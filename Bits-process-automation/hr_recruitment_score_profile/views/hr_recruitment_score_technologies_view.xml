<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>
        <record id="view_hr_recruitment_score_technologies_tree" model="ir.ui.view">
            <field name="name">hr.recruitment.score.technologies.tree</field>
            <field name="model">hr.recruitment.score.technologies</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="technologies" editable="bottom">
                    <field name="code" required="True"/>
                     <field name="name" required="True"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="description" required="1"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_recruitment_score_technologies_form" model="ir.ui.view">
            <field name="name">Technologies</field>
            <field name="model">hr.recruitment.score.technologies</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="technologies">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_hr_recruitment_score_technologies">
            <field name="name">Technologies</field>
            <field name="res_model">hr.recruitment.score.technologies</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new technology</p>
            </field>
        </record>

        <record id="sequence_hr_recruitment_score_test_tecnology" model="ir.sequence">
           <field name="name">Sequence Tecnology</field>
           <field name="code">score.tecnology</field>
           <field name="active">TRUE</field>
           <field name="prefix"></field>
           <field name="padding">6</field>
           <field name="number_next">1</field>
           <field name="number_increment">1</field>
        </record>

        <menuitem 
            id="nemu_hr_recruitment_score_technologies" 
            name="Test result menu" 
            parent="hr_recruitment_score_profile.nemu_hr_recruitment_knowledge_tests"
            action="action_view_hr_recruitment_score_technologies" 
            sequence="93"/>           
    </data>
</odoo>
              
       

