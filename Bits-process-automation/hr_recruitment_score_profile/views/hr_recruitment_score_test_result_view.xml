<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>
        <record id="view_hr_recruitment_score_test_result_tree" model="ir.ui.view">
            <field name="name">hr.recruitment.score.test.results.tree</field>
            <field name="model">hr.recruitment.score.test.results</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="test_result">
                    <field name="applicant_id"/>
                    <field name="tecnology_id"/>
                    <field name="mjs"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_recruitment_score_test_result_form" model="ir.ui.view">
            <field name="name">Test result</field>
            <field name="model">hr.recruitment.score.test.results</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="test_result">
                    <sheet>
                        <div class="oe_title"></div>
                        <group>
                            <group>
                                <field name="applicant_id" required="1"/>
                                <field name="tecnology_id" required="1"/>
                                <field name="profile_id"  required="1"/>
                            </group>
                            <group>
                                <field name="calculated_total" force_save="1" readonly="True"/>
                                <field name="total_items" force_save="1" readonly="True"/>
                                <field name="weighted_average" force_save="1" readonly="True"/>
                                <field name="mjs" readonly="True" force_save="1"/>
                            </group>
                        </group>
                        <field name="test_result_lines">
                            <tree editable="bottom">
                                <field name="skill_id"/>
                                <field name="percentage"/>
                                <field name="margen" widget="progressbar"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_hr_recruitment_score_test_result">
            <field name="name">Test result</field>
            <field name="res_model">hr.recruitment.score.test.results</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new test result
                </p>
            </field>
        </record>

        <menuitem 
            id="nemu_hr_recruitment_test_result" 
            name="Test result" 
            parent="hr_recruitment.menu_crm_case_categ0_act_job" 
            action="action_view_hr_recruitment_score_test_result" 
            sequence="95"/>
          
    </data>
</odoo>
              
       
              
       

