<odoo>

    <data>
        <template id="payroll_paycheck_template_header">

            <div class="header">
                <div class="row no-gutters">
                    <div class="col-5 text-left" style="max-height:160px;">
                        <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" alt="Logo" height="160"/>
                    </div>
                    <div class="col-7">
                        <div class="row">
                            <div class="col-12 text-right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 text-right">
                                <ul class="list-inline">
                                    <li class="list-inline-item"><span class="page"/></li>
                                    <li class="list-inline-item">/</li>
                                    <li class="list-inline-item"><span class="topage"/></li>
                                </ul>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 text-center">
                                <h5 class="text-uppercase font-weight-bold" t-field="res_company.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-1 col-12">
                                <h5 class="text-uppercase font-weight-bold">
                                    COMPROBANTE DE PAGO DE NOMINA
                                </h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-1 col-12">
                                <span class="font-weight-bold">PERIODO</span>
                                <span t-field="o.date_from" />
                                <span class="font-weight-bold">A</span>
                                <span t-field="o.date_to" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div t-attf-class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0" />
            </div>
            <div class="footer">
                <div class="container-s" style="background-color:#002b49">
                    <div class="row">
                        <div class="col-12" align="center">
                            <img src="https://bitsdrupal.bitsamericas.co/sites/default/files/cards/logowhite.png" alt="Logo" />
                        </div>
                    </div>
                    <div class="row-2">
                        <div class="col-13" align="center">
                            <h6 style="color:white" t-field="o.text_copyright" />
                        </div>
                    </div>
                </div>
            </div>
        </template>
        <template id="payroll_paycheck_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="hr_payroll_paycheck.payroll_paycheck_template_header">
                        <div class="page">
                            <div class="container" align="center">
                                <div class="row">
                                    <table class="table table-bordered" style="width:100%">
                                        <thead>
                                            <tr style="background-color:#002b49" align="left">
                                                <th colspan="4">
                                                    <strong style="color:white;font-size:100%">
                                                        INFORMACION BASICA DEL EMPLEADO
                                                    </strong>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody align="left">
                                            <tr>
                                                <th style="width:20%">
                                                    CÃ©dula:
                                                </th>
                                                <td style="width:30%">
                                                    <h6 t-field="o.employee_id.identification_id" />
                                                </td>
                                                <th style="width:20%">
                                                    Nombre:
                                                </th>
                                                <td style="widht:30%">
                                                    <h6 t-field="o.employee_id.name" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Cargo:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.job_id.name" />
                                                </td>
                                                <th>
                                                    Entidad Bancaria:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.address_home_id.bank_ids.bank_id.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Nro. Cuenta:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.address_home_id.bank_ids.acc_number"/>
                                                </td>
                                                <th>
                                                    Aporte Salud:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.health"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    Fondo Pension:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.employee_id.pension" />
                                                </td>
                                                <th>
                                                    Salario:
                                                </th>
                                                <td>
                                                    <h6 t-field="o.contract_id.wage" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <table class="table table-bordered table-sm" style="width:100%">
                                        <thead>
                                            <tr style="background-color:#002b49" align="left">
                                                <th colspan="5">
                                                    <strong style="color:white;font-size:100%">
                                                        DETALLE DEL PAGO EMPLEADO
                                                    </strong>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>ID</th>
                                                <th>CONCEPTO</th>
                                                <th>UNIDADES</th>
                                                <th>DEVENGOS</th>
                                                <th>DEDUCCIONES</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="accrual" t-value="0"/>
                                            <t t-set="deductions" t-value="0"/>
                                            <tr t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip)" t-as="line">
                                                <td>
                                                    <span t-field="line.code"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td align="right">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td align="right">
                                                    <span t-if="line.total > 0" t-esc="o._round_value_payslip(line.total)"
                                                        t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                        <t t-if="line.total > 0" t-set="accrual" t-value="accrual + line.total"/>
                                                </td>
                                                <td align="right">
                                                    <span t-if="0 >= line.total" t-esc="o._round_value_payslip(line.total)"
                                                        t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                        <t t-if="0 >= line.total" t-set="deductions" t-value="deductions + line.total"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="background-color:#002b49" t-att-colspan="3">
                                                    <strong style="color:white;font-size:100%">
                                                    Totales:
                                                    </strong>
                                                </td>
                                                <td align="right">
                                                    <strong t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                                        t-esc="o._round_value_payslip(accrual)"/>
                                                </td>
                                                <td align="right">
                                                    <strong t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                                        t-esc="o._round_value_payslip(deductions)"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="background-color:#002b49" t-att-colspan="4">
                                                    <strong style="color:white;font-size:100%">
                                                    Neto a pagar:
                                                    </strong>
                                                </td>
                                                <td align="right">
                                                    <strong t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'
                                                        t-esc="o._round_value_payslip(deductions + accrual)"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
