<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_provision_report_rule_view_form" model="ir.ui.view">
        <field name="name">payroll.provision.report.rule</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id"
            ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
              <h2>Provisions</h2>

                <div class="row mt16 o_settings_container"
                    id="hr_payroll_payroll_news">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="salary_provision_rule"/>
                            <div class="text-muted">
                                SALARY Rules apply
                            </div>
                            <field name="salary_provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="overtime_provision_rule"/>
                            <div class="text-muted">
                                COMMI + OT Rules apply
                            </div>
                            <field name="overtime_provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container"
                    id="hr_payroll_payroll_news">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="adjustment_provision_rule"/>
                            <div class="text-muted">
                                ADJUSMENT Rules apply
                            </div>
                            <field name="adjustment_provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="closing_adjustment_provision_rule"/>
                            <div class="text-muted">
                                CLOSING ADJUSMENT Rules apply
                            </div>
                            <field name="closing_adjustment_provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container"
                    id="hr_payroll_payroll_news">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="bonus_provision_rule"/>
                            <div class="text-muted">
                                BONUS PROVISION Rules apply
                            </div>
                            <field name="bonus_provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="provision_rule"/>
                            <div class="text-muted">
                                LAYOFFS PROVISION Rules apply
                            </div>
                            <field name="provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container"
                    id="hr_payroll_payroll_news">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="vacations_provision_rule"/>
                            <div class="text-muted">
                                VACATIONS PROVISION Rules apply
                            </div>
                            <field name="vacations_provision_rule" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>