<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payroll_provisions_report_form" model="ir.ui.view">
            <field name="name">payroll_provisions_report_form</field>
            <field name="model">payroll.provisions.report</field>
            <field name="arch" type="xml">

                <form string="Provisions Report">
                    <group>
                        <group>
                            <field name="date_start" required="1"/>
                            <field name="all_employees"/>
                            <field name="file_extension" required="1"/>
                        </group>
                        <group>
                            <field name="date_end" required="1"/>
                            <field name="employees" attrs="{'invisible': [('all_employees', '=', True)], 'required': [('all_employees', '=', False)]}"/>
                        </group>
                    </group>
                    <group name="file">
                        <field name="file_filename" attrs="{'invisible': ['|',('file_binary', '=', ''),('file_binary', '=', False)]}" readonly="1"/>
                        <field name="file_binary" filename="file_filename" attrs="{'invisible': ['|',('file_binary', '=', ''),('file_binary', '=', False)]}" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Export" name="generate_excel_report" type="object" class="btn-primary"/>
                    </footer>
                </form>

            </field>
        </record>
    </data>
</odoo>