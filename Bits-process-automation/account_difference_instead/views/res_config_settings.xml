<?xml version='1.0' encoding="utf-8"?>
<odoo>
    <record id="account_account_niif_settings_view_form" model="ir.ui.view">
        <field name="name">account.account.niif.settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="120"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_vendor_bills']" position="after">
                <h2>Unrealized exchange rate differences</h2>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                      <span class="o_form_label">Vendors - Unrealized exchange rate difference</span>
                      <div class="text-muted">
                        Choose an account for vendors
                      </div>
                      <div class="text-muted">
                          <field name="unrealized_exchange_vendors"/>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                      <span class="o_form_label">Customers - Unrealized exchange rate difference</span>
                      <div class="text-muted">
                        Choose an account for customers
                      </div>
                      <div class="text-muted">
                          <field name="unrealized_exchange_customers"/>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                      <span class="o_form_label">Income - Unrealized exchange rate difference</span>
                      <div class="text-muted">
                        Choose an account for income
                      </div>
                      <div class="text-muted">
                          <field name="unrealized_exchange_income"/>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                      <span class="o_form_label">Expenses - Unrealized exchange rate difference</span>
                      <div class="text-muted">
                        Choose an account for expenses
                      </div>
                      <div class="text-muted">
                          <field name="unrealized_exchange_expenses"/>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                      <span class="o_form_label">Journal - Unrealized exchange rate difference</span>
                      <div class="text-muted">
                        Choose a Journal for unrealized exchange rate difference
                      </div>
                      <div class="text-muted">
                          <field name="unrealized_exchange_journal"/>
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-lg-6 o_setting_box">
                  </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>