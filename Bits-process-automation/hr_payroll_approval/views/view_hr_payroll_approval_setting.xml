<odoo>
    <data>

        <record model="ir.ui.view" id="view_hr_payroll_approval_setting">
            <field name="name">view_hr_payroll_approval_setting</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@id='hr_payroll_accountant']" position="after">

                    <h2>Payroll Approval</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="emails_job_ids" class="o_form_label"/>
                                <br></br>
                                <field name="emails_job_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>

                </xpath>
                
            </field>
        </record>


    </data>
</odoo>