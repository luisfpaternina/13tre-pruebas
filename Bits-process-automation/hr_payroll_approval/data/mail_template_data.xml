<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="approval_email_template" model='mail.template'>
            <field name="name">Payroll Approval Template</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="email_from">${object.env.user.work_email or object.env.user.address_id.email or ''}</field>
            <field name="email_to"></field>
            <field name="subject">Envio de aprobacion de Nomina</field>
            <field name="auto_delete" eval="True"/>
            <field name="lang">es_CO</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Cordial saludo Director administrativo y financiero,
                        En el presente correo se realizá el envío de nómina para su respectiva validación y aprobación.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="hr_payroll_paycheck.hr_payroll_payslip_report"/>
            <field name="report_name">${object.employee_id.name}-Nomina-${object.month_payroll}-${object.year_payroll}</field>
        </record>
    </data>
</odoo>


