<odoo>
  <data>

    <record model="ir.ui.view" id="stock_income_custom">
      <field name="name">custom_stock_income_view</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='do_unreserve']" position="after">
          <button name="send_confirmation_of_receipt" string="CONFIRM TO SUPPLIERS" type="object"
            attrs="{'invisible':[('state', '!=', 'done')]}"
            class="btn btn-primary"
          />
        </xpath>
      </field>
    </record>

    <act_window
      name="Send Confirmation &amp; Print"
      id="email_send_confirmation_to_suppliers"
      res_model="send.confirmation.to.suppliers"
      binding_model="stock.picking"
      binding_views="list"
      view_mode="form"
      target="new"
      context="{
        'default_template_id': ref('send_confirmation_suppliers_email_template')
      }"
    />

