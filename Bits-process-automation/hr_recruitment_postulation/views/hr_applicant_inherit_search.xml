<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_applicant_view_inherit_search" model="ir.ui.view">
            <field name="name">hr.applicant.view.inherit.search</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_search_bis" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_name']" position="before">
                    <field name="identification_number" filter_domain="[ ('identification_number', 'ilike', self) ]" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>