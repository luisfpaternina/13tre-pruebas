<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!--Begin View Tree-->
    <record id="hr_employee_internal_request_tree_stages" model="ir.ui.view">
        <field name="name">hr_employee_internal_request_tree_stages</field>
        <field name="model">hr.employee.internal.request.stages</field>
        <field name="arch" type="xml">

            <tree>
              <field name="name" />
              <field name="close"/>
              <field name="sequence"/>
            </tree>

        </field>
    </record>
    <!--End View Tree-->

    <!--Begin View Form-->
    <record id="hr_employee_internal_request_form_stages" model="ir.ui.view">
      <field name="name">hr_employee_internal_request_form_stages</field>
      <field name="model">hr.employee.internal.request.stages</field>
      <field name="arch" type="xml">

        <form string="Internal Request Stages" class="o_form_project_tasks">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="close"/>
                <field name="is_cancelled"/>
              </group>
              <group>
                <field name="sequence"/>
                <field name="template_id"/>
              </group>
            </group>

            <notebook>
              <page name="email_profile_ids" string="Emails per profile">
                <group>
                  <!-- <group> -->
                    <field name="email_profile_ids" nolabel="1">
                      <tree>
                        <field name="name" />
                      </tree>
                    </field>
                  <!-- </group> -->
                </group>
              </page>
            </notebook>
          </sheet>
        </form>

      </field>
    </record>
    <!--End View Form-->

  </data>
</odoo>