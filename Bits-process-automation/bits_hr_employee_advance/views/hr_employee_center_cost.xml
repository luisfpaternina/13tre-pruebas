<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_center_cost_form" model="ir.ui.view">
            <field name="name">hr_employee_center_cost_form</field>
            <field name="model">hr.employee.center.cost</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="percentage"/>
                        <field name="account_analytic_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hr_employee_center_cost_tree" model="ir.ui.view">
            <field name="name">hr_employee_center_cost_tree</field>
            <field name="model">hr.employee.center.cost</field>
            <field name="arch" type="xml">
                <tree string="Center cost employee" editable="bottom">
                    <field name="employee_id" />
                    <field name="account_analytic_id" />
                    <field name="percentage" />
                </tree>
            </field>
        </record>

        <record id="action_hr_employee_cost_center_tree" model="ir.actions.act_window">
            <field name="name">Cost centers</field>
            <field name="res_model">hr.employee.center.cost</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="cost_centers"
            name="Cost centers"
            parent="hr.menu_hr_employee_payroll"
            action="action_hr_employee_cost_center_tree"
            sequence="1"/>
    </data>
</odoo>
