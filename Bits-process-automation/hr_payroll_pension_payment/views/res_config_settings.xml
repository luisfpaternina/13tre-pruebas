<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_contrib_pension_rule_view_form" model="ir.ui.view">
        <field name="name">hr.employee.contrib.pension.rule</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id"
            ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
              <h2>Settlement</h2>
              <div class="row mt16 o_settings_container">
                  <div class="col-12 col-lg-6 o_setting_box">
                      <div class="o_setting_right_pane">
                          <label for="rule_contrib_pension" class="col-sm-2 o_light_label"/>
                          <field name="rule_contrib_pension" widget="many2many_tags"/>
                      </div>
                  </div>
              </div>
            </xpath>
        </field>
    </record>
</odoo>