<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_external_layout_standard">
        <div t-attf-class="header no-gutters">
            <div class="row">
                <div class="col-3">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 65px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right">
                    <ul class="list-unstyled">
                        <strong><li style="padding:0px;margin:0px;line-height:16px;" t-if="company.name"><span t-field="company.name"/></li></strong>
                        <li style="padding:0px;margin:0px;line-height:16px;" t-if="company.vat"><t t-esc="company.country_id.vat_label or 'NIT'"/>: <span t-field="company.vat"/></li>
                        <li style="padding:0px;margin:0px;line-height:16px;" t-if="company.phone">Tel: <span t-field="company.phone"/></li>
                    </ul>
                </div>
            </div>
            <div class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
        </div>

        <div t-attf-class="article"
            t-att-data-oe-model="o and o._name"
            t-att-data-oe-id="o and o.id"
            t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0" />
        </div>

        <div t-attf-class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item d-inline">Web: <span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Nit'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="custom_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="bits_purchase_order_template.custom_external_layout_standard"><t t-raw="0"/></t>
    </template>

    <template id="report_custom_purchaseorder_document">
        <t t-call="bits_purchase_order_template.custom_external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div class="page">
                <div class="container no-gutters">
                    <div style="margin-top:-10px;padding-top:-10px;"  class="row mt32 mb32">
                        <div class="col-6" name="partner_address">
                            <ul class="list-unstyled">
                                <li t-if="o.partner_id.name">
                                    <strong>
                                        <span t-field="o.partner_id.name"/>
                                    </strong>
                                </li>
                                <li t-if="o.partner_id.vat">
                                    <t t-esc="o.partner_id.country_id.vat_label or 'Nit'"/>: 
                                    <span t-field="o.partner_id.vat"/>
                                </li>
                                <li t-if="o.partner_id.phone">Tel: 
                                    <span t-field="o.partner_id.phone"/>
                                </li>
                                <li t-if="o.partner_id.street">
                                    <span t-field="o.partner_id.street"/>
                                </li>
                                <li t-if="o.partner_id.city">
                                    <span t-field="o.partner_id.city"/>
                                </li>
                                <li t-if="o.partner_id.state_id">
                                    <span t-field="o.partner_id.state_id"/>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="col-12">
                            <h2 t-if="o.state in ['purchase', 'done']">Order de Compra #<span t-field="o.name"/></h2>
                            <h2 t-if="o.state == 'cancel'">Orden de Compra (Cancelada) #<span t-field="o.name"/></h2>
                        </div>
                    </div>

                    <div id="informations" class="row mt32 mb32">
                        <div t-if="o.user_id" class="col-3 bm-2">
                            <strong>Repr. del Proveedor:</strong>
                            <p t-field="o.user_id" class="m-0"/>
                        </div>
                        <div t-if="o.partner_ref" class="col-3 bm-2">
                            <strong>Referencia:</strong>
                            <p t-field="o.partner_ref" class="m-0"/>
                        </div>
                        <div t-if="o.date_order" class="col-3 bm-2">
                            <strong>Fecha:</strong>
                            <p t-field="o.date_order" class="m-0"/>
                        </div>
                        <div t-if="o.date_approve" class="col-3 bm-2">
                            <strong>Fecha confirmación:</strong>
                            <p t-field="o.date_approve" class="m-0"/>
                        </div>
                    </div>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th name="th_description"><strong>Descripción</strong></th>
                                <th name="th_quantity" class="text-right"><strong>Cantidad</strong></th>
                                <th name="th_price_unit" class="text-right"><strong>Valor Unitario</strong></th>
                                <th name="th_taxes" class="text-right"><strong>IVA</strong></th>
                                <th name="th_amount" class="text-right"><strong>Total</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="o.order_line" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td id="product">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_qty"/>
                                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td name="td_taxes">
                                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" id="note">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99" id="subtotal">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div id="total" class="row justify-content-end mt32">
                        <div class="col-4">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td name="td_subtotal_label"><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td name="td_taxes_label"><strong>IVA</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label"><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row mt16">
                        <div class="col-8">
                            <p t-field="o.notes"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_custom_purchaseorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="bits_purchase_order_template.report_custom_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
