<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="hr_contract_history_inherit">
      <field name="name">hr.contract.history.inherit</field>
      <field name="model">hr.contract</field>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='information']" position="after">
          <page name="hr_contract_history" string="History">
            <group>
              <field name="contract_history_ids" nolabel="1" create="false" edit="false">
                <tree editable="bottom" default_order="date desc">
                  <field name="contract_id" invisible="1"/>
                  <field name="_type"/>
                  <field name="description"/>
                  <field name="date"/>
                  <field name="adjusment_date"/>
                  <field name="last_salary"/>
                  <field name="amount"/>
                </tree>
              </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>