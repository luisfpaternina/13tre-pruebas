<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="account_payment_flat_file_form_view">
        <field name="name">account.payment.flat_file.form.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='post']" position="after">
                <button name="generate_flat_file" string="Generate Flat File" type="object" class="oe_highlight" attrs="{'invisible':[('payment_type','!=','outbound')]}"/>
            </xpath>
        </field>
    </record>
</odoo>