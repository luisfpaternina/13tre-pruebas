<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_flat_file_base_wizard_form" model="ir.ui.view">
            <field name="name">account.flat.file.base.wizard.form</field>
            <field name="model">account.flat.file.base</field>
            <field name="arch" type="xml">
                <form string="Flat File">
                    <group>
                        <field name="bank_id" readonly="1"/>
                        <field name="bank_bic" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="account_debit" readonly="1"/>
                            <field name="account_type" readonly="1"/>
                            <field name="payment_description" required="1"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="application_date" required="1"/>
                            <field name="transaction_type" required="1"/>
                        </group>
                    </group>
                    <group name="file">
                        <field name="file_type" required="1"/>
                        <field name="file_filename" invisible="1"/>
                        <field name="file_binary" filename="file_filename" readonly="1"/>
                    </group>
                    <footer>
                        <button name="export_flat_file" string="Export Flat File" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>