<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="account_collective_payments_inherit_wizard_form" model="ir.ui.view">
            <field name="name">account.collective.payments.inherit.wizard.form</field>
            <field name="model">account.collective.payments.wizard</field>
            <field name="inherit_id" ref="account_collective_payments.account_collective_payments_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group[1]/group[2]/field[@name='payment_method_id']" position="after">
                    <field 
                        name="payment_way_dian_id"
                        string="Payment Way"
                        options="{'no_open': true,
                                'no_quick_create': true,
                                'no_create_edit': true,
                                'no_create':true}"
                        required="True"
                    />
                    <field 
                        name="payment_method_dian_id"
                        string="Payment Method"
                        options="{'no_open': true,
                                'no_quick_create': true,
                                'no_create_edit': true,
                                'no_create':true}"
                        required="True"
                    />
                </xpath>
                <xpath expr="//form/group[1]/group[2]/field[@name='payment_method_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/group[1]/group[1]/field[@name='journal_id']" position="after">
                    <field name="payment_date" string="Payment Date" required="True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>