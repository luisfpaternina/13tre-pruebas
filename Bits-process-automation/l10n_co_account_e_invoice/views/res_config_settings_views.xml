<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.l10n_co</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="after">
                    <h2>Bits - Colombian Electronic Invoicing</h2>
                    <div class="row mt16 o_settings_container" id="l10n_co_account_e_invoice_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_co_sequence_resolution"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_co_sequence_resolution" string="Install resolutions"/>
                                <div class="text-muted">
                                    Install the module sequence from resolutions DIAN
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="active_tech_provider"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="active_tech_provider" string="Tech Provider"/>
                                <div class="text-muted">
                                    Activate required tech provider with invoice action post
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Localization Taxes</span>
                                <div class="text-muted">
                                    Load taxes groups, taxes types and related for localitacion Colombian
                                </div>
                                <div class="content-group">
                                    <div class="mt8">
                                        <button
                                            name="l10n_co_install_group_taxes"
                                            icon="fa-arrow-right"
                                            type="object"
                                            string="Install group taxes"
                                            class="btn-link"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Default Sales Tax" for="sale_tax_id"/>
                                    <div class="text-muted">
                                        Default sales tax for products
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="sale_tax_ids" widget="many2many_tags" options="{'no_create_edit': True}" colspan="4" nolabel="1" domain="[('type_tax_use', 'in', ('sale', 'all')), ('company_id', '=', company_id)]"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Required Tax" for="tax_group_id"/>
                                    <div class="text-muted">
                                        VAT tax required
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="tax_group_id" options="{'no_create_edit': True}" colspan="4" nolabel="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Bills" for="type_documents_for_invoice"/>
                                    <div class="text-muted">
                                        Types of documents for invoices
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="type_documents_for_invoice"  widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Credit Notes" for="type_documents_for_credit_note"/>
                                    <div class="text-muted">
                                        Types of documents for credit notes
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="type_documents_for_credit_note"  widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Debit Notes" for="type_documents_for_debit_note"/>
                                    <div class="text-muted">
                                        Types of documents for debit notes
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="type_documents_for_debit_note"  widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
