<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_dian_extended" model="ir.ui.view">
            <field name="name">Datos de la compañía requeridos por la DIAN</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="dian" string="Setting DIAN">
                        <group>
                            <group>
                                <field name="trade_name"/>
                                <field name="operation_type"/>
                                <field name="digital_certificate"/>
                                <field name="provider_id" domain="[('property_company_id','=',id)]"/>
                            </group>
                            <group string="Information for graphic representation">
                                <field name="header_regimen_activity"/>
                                <field name="header_rate"/>
                                <field name="header_decree"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
