<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payroll_structure_code_form" model="ir.ui.view">
        <field name="name">hr.payroll.structure.code.form</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form"></field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='schedule_pay']" position="after">
                <field name="code"/>
            </xpath>
        </field>
    </record>
    <record id="hr_payroll_structure_code_tree" model="ir.ui.view">
        <field name="name">hr.payroll.structure.code.tree</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payroll_structure_list_view"></field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="code"/>
            </xpath>
        </field>
    </record>
</odoo>