<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_account_partner_form" model="ir.ui.view">
            <field name="name">res.config.settings.account.partner.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                    <h2>Accounting Payroll</h2>
                    <div class="row mt16 o_settings_container" id="hr_payroll_accountant_partner">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Adjusment Entry Account Analytic</span>
                                <div class="text-muted">
                                        Adjusment Entry Accounting Payroll
                                </div>
                                <field name="adjusment_entry_account_analytic"/>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_type_off_balance"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_type_off_balance"/>
                                <div class="text-muted">
                                Division for Off Balance accounts.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" id="hr_payroll_accountant_partner_types">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_type_asset"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_type_asset"/>
                                <div class="text-muted">
                                Division for asset accounts
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_type_liability"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_type_liability"/>
                                <div class="text-muted">
                                Division for liability accounts
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" id="hr_payroll_accountant_partner_types">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_type_income"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_type_income"/>
                                <div class="text-muted">
                                Division for income accounts
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_type_expense"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_type_expense"/>
                                <div class="text-muted">
                                Division for expense accounts
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" id="hr_payroll_accountant_partner_types">
                        <div class="col-lg-6 col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_type_equity"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_type_equity"/>
                                <div class="text-muted">
                                Division for equity accounts
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>