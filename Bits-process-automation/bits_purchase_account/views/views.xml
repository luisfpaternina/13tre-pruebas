<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="bits_purchase_account_view">
      <field name="name">bits.purchase.account.view</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_invoice_register_payment']" position="after">
          <button string="REVIEW" name="action_general_state_approve" type="object" attrs="{'invisible':[('general_state', '=', 'reviewed')]}" class="oe_highlight" />
        </xpath>
        <xpath expr="//field[@name='journal_id']" position="after">
          <field name="general_state" readonly="1"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>