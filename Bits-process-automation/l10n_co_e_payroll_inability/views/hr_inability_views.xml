<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_co_e_payroll_hr_inability_form" model="ir.ui.view">
        <field name="name">l10n_co_e_payroll_hr_inability_form</field>
        <field name="model">hr.inability</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <group>
                        <field name="code" required="1"/>
                        <field name="observation"/>
                        <field name="salary_rule_m2m_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_co_e_payroll_hr_inability_tree" model="ir.ui.view">
        <field name="name">l10n_co_e_payroll_hr_inability_tree</field>
        <field name="model">hr.inability</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="observation"/>
                <field name="salary_rule_m2m_ids"/>
            </tree>
        </field>
    </record>
</odoo>
