<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_budget_revision_form_inherit" model="ir.ui.view">
        <field name="name">purchase.budget.revision.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_rfq_send']" position="after">
                <button
                    name="action_notification_send"
                    string="Send For Up Budget"
                    attrs="{'invisible': [('budget_approval_state','!=','excess')]}"
                    type="object" context="{'send_rfq':True, 'send_budget_approval':True}"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field 
                    name="budget_approval_state" 
                    readonly="1" />
            </xpath>

            <xpath expr="//div[@name='button_box']" position="before">
                <div class="alert alert-warning" role="alert" attrs="{'invisible': [('warning_message','=',False)]}">
                    <field name="warning_message"/>
                </div>
            </xpath>
            
            <xpath expr="//field[@name='order_line']//tree" position="attributes">
                <attribute name="decoration-danger">is_excess_budget</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='display_type']" position="after">
                <field name="is_excess_budget" invisible="1"/>
                <field name="crossovered_budget_line_id" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>
