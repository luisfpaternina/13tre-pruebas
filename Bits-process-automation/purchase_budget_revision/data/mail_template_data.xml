<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_notify_budget_excess" model="mail.template">
            <field name="name">Budget Excess: Send Approved</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="subject">Budget Excess: Send Approved</field>
            <field name="email_to">
                ${(object.email_to or '') | safe}
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Receive a cordial greeting, please require approval 
                        of budget increase to make the purchase request. <strong>${object.name}</strong>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
