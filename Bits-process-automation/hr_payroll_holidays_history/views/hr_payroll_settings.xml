<odoo>
    <data>

        <record model="ir.ui.view" id="bits_hr_holidays_setting">
            <field name="name">bits_hr_holidays_setting</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@id='hr_payroll_accountant']" position="after">

                    <h2>Holidays</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="days_per_period" class="o_form_label"/>
                                <br></br>
                                <field name="days_per_period"/>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="minimum_days_enjoyed" class="o_form_label"/>
                                <br></br>
                                <field name="minimum_days_enjoyed"/>
                            </div>
                        </div>
                    </div>

                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="maximum_days_compensated" class="o_form_label"/>
                                <br></br>
                                <field name="maximum_days_compensated"/>
                            </div>
                        </div>

                         <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane row">
                                <label for="after_x_lapse" class="o_form_label"/>
                                <br></br>
                                <field name="after_x_lapse"/>

                                <label for="additional_days" class="o_form_label"/>
                                <br></br>
                                <field name="additional_days"/>
                            </div>
                        </div>
                    </div>

                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="holiday_structure_ids" class="o_form_label"/>
                                <br></br>
                                <field name="holiday_structure_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>

                </xpath>
                
            </field>
        </record>


    </data>
</odoo>
