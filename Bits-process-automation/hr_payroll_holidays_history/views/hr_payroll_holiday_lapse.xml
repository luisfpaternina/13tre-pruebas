<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Begin View Form-->
        <record id="hr_payroll_holiday_lapse_form" model="ir.ui.view">
            <field name="name">hr_payroll_holiday_lapse_form</field>
            <field name="model">hr.payroll.holiday.lapse</field>
            <field name="arch" type="xml">

                <form string="Holiday lapse" class="o_form_project_tasks">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="1,2,3" />
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="employee_id" placeholder="Employee name" autocomplete="off"/>
                                </h1>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="begin_date"
                                    placeholder="Begin date holidays"
                                    autocomplete="off" />
                            </group>
                            <group>
                                <field name="end_date"
                                    placeholder="End date holidays"
                                    autocomplete="off" />
                            </group>
                        </group>
                        <hr/>
                        <group>
                            <group>
                                <field name="number_holiday_days" readonly="1" force_save="1" />
                                <field name="days_taken" readonly="1" force_save="1" />
                                <field name="compesated_in_money" readonly="1" force_save="1" />
                                <field name="pending_days" readonly="1" force_save="1" />
                            </group>

                            <group>
                                <field name="type_vacation" readonly="1" force_save="1"/>
                                <field name="document" />
                                <field name="comments" />
                            </group>
                        </group>

                        <notebook attrs="{'invisible': [('holidays_history_ids', '=', [])]}">
                            <page name="holiday_history" string="Holiday history">
                                <field name="holidays_history_ids" attrs="{'readonly':True}">
                                    <tree>
                                        <field name="enjoyment_start_date"/>
                                        <field name="enjoyment_end_date"/>
                                        <field name="enjoyment_days"/>
                                        <field name="compensated_days" />
                                        <field name="global_state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>


                </form>

            </field>
        </record>
        <!--End View Form-->

        <!--Begin View Tree-->
        <record id="hr_payroll_holiday_lapse_tree" model="ir.ui.view">
            <field name="name">hr_payroll_holiday_lapse_tree</field>
            <field name="model">hr.payroll.holiday.lapse</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="name" />
                    <field name="begin_date" />
                    <field name="end_date" />
                    <field name="number_holiday_days" />
                    <field name="state"/>
                </tree>

            </field>
        </record>
        <!--End View Tree-->

        <record id="action_hr_payroll_holiday_lapse" model="ir.actions.act_window">
            <field name="name">Holiday lapse</field>
            <field name="res_model">hr.payroll.holiday.lapse</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_Current":1}</field>
        </record>

    </data>
</odoo>
