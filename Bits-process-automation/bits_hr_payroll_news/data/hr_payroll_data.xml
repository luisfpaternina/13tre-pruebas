<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Salary Structure Type Novelty -->
        <record id="structure_type_novelty" model="hr.payroll.structure.type">
            <field name="name">Novedades</field>
            <field name="country_id" eval="False"/>
            <field name="is_novelty" eval="True"></field>
        </record>

        <!-- Salary Structure Novelty -->
        <record id="structure_novelty_01" model="hr.payroll.structure">
            <field name="name">Horas extras</field>
            <field name="type_id" ref="structure_type_novelty"/>
            <field name="country_id" eval="False"/>
        </record>

        <!-- Salary Structure Novelty -->
        <record id="structure_novelty_02" model="hr.payroll.structure">
            <field name="name">Ausentismos</field>
            <field name="type_id" ref="structure_type_novelty"/>
            <field name="country_id" eval="False"/>
            <field name="date_range_apply" eval="True"/>
        </record>

        <!-- Salary Structure Novelty -->
        <record id="structure_novelty_03" model="hr.payroll.structure">
            <field name="name">Ocasionales</field>
            <field name="type_id" ref="structure_type_novelty"/>
            <field name="country_id" eval="False"/>
        </record>

        <!-- Salary Structure Novelty -->
        <record id="structure_novelty_04" model="hr.payroll.structure">
            <field name="name">Fijas</field>
            <field name="type_id" ref="structure_type_novelty"/>
            <field name="country_id" eval="False"/>
        </record>

        <record id="category_novelty_01" model="hr.salary.rule.category">
            <field name="name">Accrual</field>
            <field name="code">DEV</field>
        </record>

        <record id="category_novelty_02" model="hr.salary.rule.category">
            <field name="name">Deduction</field>
            <field name="code">DED</field>
        </record>

        <record id="category_company_contribution_01" model="hr.salary.rule.category">
            <field name="name">Company Contribution</field>
            <field name="code">COMPCON</field>
        </record>

        <!-- Decimal Precision -->
        <record id="hr_payroll.decimal_payroll" model="decimal.precision">
            <field name="rouding">-2</field>
            <field name="multiple">100</field>
        </record>

    </data>
</odoo>
