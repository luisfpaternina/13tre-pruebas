<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payroll_news_settings_view_form" model="ir.ui.view">
        <field name="name">hr.payroll.news.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="80"/>
        <field name="inherit_id"
            ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                <h2>Payroll News</h2>
                <div class="row mt16 o_settings_container"
                    id="hr_payroll_payroll_news">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_bits_hr_payroll_news_related"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_bits_hr_payroll_news_related" string="Install integrate payroll news"/>
                            <div class="text-muted">
                                Install the module to integrate the payroll news 
                                to payslip
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box" attrs="{'invisible': [('module_bits_hr_payroll_news_related', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="integrate_payroll_news"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="integrate_payroll_news"/>
                            <div class="text-muted">
                                Search all the payroll news to 
                                include them in payslip
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container"
                    id="hr_payroll_payroll_news">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_bits_hr_contract_advance"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_bits_hr_contract_advance"/>
                            <div class="text-muted">
                                Integrate employee deductions or additions from the contract
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="rounding_rule_ids"/>
                            <div class="text-muted">
                                Rouding Rules apply
                            </div>
                            <field name="rounding_rule_ids" widget="many2many_tags"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
