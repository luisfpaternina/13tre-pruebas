<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="account_journal_niif" model="ir.ui.view">
      <field name="name">account_journal_niif</field>
      <field name="model">account.journal</field>
      <field name="inherit_id" ref="account.view_account_journal_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='journal_entries']/group/group" position="after">
          <group name="account_journal_niif">
            <field name="accounting" widget="radio"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>