<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_hr_recruitment_request_setting" model="ir.ui.view">
            <field name="name">view_hr_recruitment_request_setting</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_recruitment.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@name='recruitment_process_div']" position="after">
                    <h2>Recruitment Profiles</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="profile_email_ids" class="o_form_label"/>
                                <br></br>
                                <field name="profile_email_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            
            </field>
        </record>   

    </data>

</odoo>
