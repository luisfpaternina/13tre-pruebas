<?xml version="1.0" encoding="utf-8"?>
<odoo>
                <!-- <xpath expr="//div[@name='o_address_format']" position="replace"> -->
    <data>
        <record model="ir.ui.view" id="bits_l10n_co_partner_form_view">
            <field name="name">bits.l10n.co.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group/div[hasclass('o_address_format')]" position="replace">
                    <field 
                        name="street"
                        placeholder="Street..."
                        class="o_address_street"
                        attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field 
                        name="street2" 
                        placeholder="Street 2..." 
                        class="o_address_street" 
                        attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field 
                        name="country_id" 
                        placeholder="Country" 
                        class="o_address_country" 
                        options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                    <field 
                        name="state_id" 
                        class="o_address_state" 
                        placeholder="State" 
                        options="{&quot;no_open&quot;: True}" 
                        attrs="{'readonly': [('type', '=', 'contact'),('country_id', '=', False)]}" 
                        context="{'country_id': country_id, 'zip': zip}"/>
                    <field name="l10n_co_dian_code" invisible="1"/>
                    <field 
                        name="town_id"
                        required="True"
                        options="{&quot;no_open&quot;: True}" 
                        attrs="{'readonly': [('type', '=', 'contact')]}"/>
                        <!-- ('country_id.l10n_co_dian_code', '!=', '169') -->
                    <field name="divipola_town" invisible="1"/>
                    <field name="divipola_state" invisible="1"/>
                    <field 
                        name="city" 
                        placeholder="City" 
                        class="o_address_city" 
                        attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field 
                        name="zip" 
                        placeholder="ZIP" 
                        class="o_address_zip" 
                        attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>

                </xpath>
                <!-- <xpath expr="//field[@name='state_id']" position="after">
                    <field name="town_id" required="1"/>
                    <field name="divipola_town" invisible="1"/>
                    <field name="divipola_state" invisible="1"/>
                </xpath> -->
            </field>
        </record>

    </data>
</odoo>
