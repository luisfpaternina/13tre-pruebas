<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!--Vista TREE-->
        <record model="ir.ui.view" id="bits_l10n_co_tree">
            <field name="name">bits_l10n_co.tree</field>
            <field name="model">bits_l10n_co</field> 
            <field name="arch" type="xml">
                <tree string="Localizacion">
                    <field name="divipola_code"/>
                    <field name="name"/>
                    <field name="place_type"/>
                </tree>
            </field>
        </record>

    <!--Vista FORM-->
        <record model="ir.ui.view" id="bits_l10n_co.form">
            <field name="name">bits_l10n_co.form</field>
            <field name="model">bits_l10n_co</field> 
            <field name="arch" type="xml">
                <form string="Location">
                    <sheet>
                        <group>
                            <field name="divipola_code"/>
                            <field name="name"/>
                            <field name="place_type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!--Accion para ingresar a las vistas del modulo creado-->
        <record model="ir.actions.act_window" id="action_bits_l10n_co">
            <field name="name">Location</field>
            <field name="res_model">bits_l10n_co</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_bits_l10n_co_tree_action" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="bits_l10n_co_tree"/>
            <field name="act_window_id" ref="action_bits_l10n_co"/>
        </record>
        

    <!--Configuracion del menu, para agregar la opcion del modulo creado-->
        <menuitem
        action="action_bits_l10n_co"
        id="action_menu_bits_l10n_co"
        parent="hr.menu_human_resources_configuration"
        name="Location"
        sequence="4"
        />
        
    </data>
</odoo>