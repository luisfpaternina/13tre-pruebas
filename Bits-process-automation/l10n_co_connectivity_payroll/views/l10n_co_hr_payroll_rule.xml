<field name="model">hr.salary.rule</field>
<field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
<field name="arch" type="xml">
<xpath expr="//field[@name='amount_select']" position="before">
<field name="l10n_type_rule" readonly="0"/>
<field name="is_connectivity_rule" attrs="{'invisible':[('l10n_type_rule', '!=', 'connectivity_rule')]}"/>
<field name="tech_provider_line_id"/>
</xpath>
</field>
</record>
</odoo>
