<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>
        <record id="view_account_column_configuration_tree" model="ir.ui.view">
            <field name="name">account.column.configuration.tree</field>
            <field name="model">account.column.configuration</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="column_configuration">
                    <field name="name"/>
                    <field name="format_exogenus_id" options="{'no_create': True, 'no_create_edit':True}"/>
                </tree>
            </field>
        </record>
        <record id="view_account_column_configuration_form" model="ir.ui.view">
            <field name="name">account.column.configuration.form</field>
            <field name="model">account.column.configuration</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="column_configuration">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;">
                                            <field name="name" required="1" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                            <group>
                            <group>
                                <field name="code"/>
                                <field name="format_exogenus_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="bool_delete"/>
                            </group>
                                <group string="Code python">
                                <html>
                                    <field name="condition_python" 
                                        placeholder="result = object.code"
                                        colspan="4" nolabel="1" widget="ace" options="{'mode':'python'}" style="font-size:80px;"/>
                                </html>
                                <!-- <br/> -->
                                <div colspan="4" style="background-color:#C0C0C0;">
                                    Example ejecution: <br/>
                                    <b>object : model account.move.line</b> and return record model account.move.line(1) <br/>
                                    <b>user_obj : self.env.user</b> <br/>
                                    <b>result = object.move_id.name</b> <br/>
                                    >> AND return account move code name
                                </div>
                                </group>
                            <group/>
                            <group>
                                    <field name="account_account_ids" options="{'no_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
                            </group>
                            <field name="description" placeholder="Description..."/>
                        </group>
                        <notebook colspan="4">
                            <page name="account_column" string="Account-column" invisible="1">
                                <group>
                                    <field name="account_colum_line_ids">
                                        <tree editable="botttom">
                                            <field name="column" required="1"/>
                                            <field name="account" required="1"/>
                                        </tree>
                                    </field>
                                </group> 
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_account_column_configuration">
            <field name="name">Account column configuration</field>
            <field name="res_model">account.column.configuration</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>


        <menuitem id="menu_account_column_configuration" 
                    name="Account column configuration"  
                    sequence="170" 
                    parent="account_exogenus_settings.account_exogenus_menu" 
                    groups="account.group_account_manager"
                    action="action_view_account_column_configuration"/>
           
    </data>
</odoo>