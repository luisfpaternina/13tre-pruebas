<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_concept_exogenus_from_view">
            <field name="name">account.concept.exogenus.from.view</field>
            <field name="model">account.concept.exogenus</field>
            <field eval="3" name="priority"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title pr-0">
                            <label for='name'>name</label>

                            <h2>
                                <field name="name" required="1"/>
                                <field name="total_percentage" invisible="1"/>
                                <field name="total_number_share" invisible="1"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="code" attrs="{'required':[('concept_code','=',True)],'invisible':[('concept_code','=',False)]}"/>
                                <field name="concept_code"/>
                                <field name="fiscal_liquid_equity" invisible="1"/>
                                <field name="number_shares_outstanding" invisible="1"/>
                            </group>
                            <group>
                                <field name="partner_report" invisible="1"/>
                                <field name="format_exogenus_code" invisible="1"/>
                                <field name="format_exogenus_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="lesser_amount"/>
                                <field name="joint_stock_company" invisible="1"/>
                                <field name="base_amounts_report" attrs="{'invisible':[('partner_report','=',False)],'required':[('partner_report','=',True)]}"/>
                                <field name="account_account_ids"  widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}" invisible="1"/>
                            </group>
                        </group>
                        <field name="concept_exogenus_line_ids">
                            <tree editable="bottom">
                                <field name="account_id"/>
                                <field name="account_code"/>
                                <field name="lesser_amount" force_save="1"/>
                                <field name="deductible"/>
                                <field name="deducible_percentage" attrs="{'readonly': [('deductible', '!=', True)]}"/>
                                <field name="account_cost_expense_deductible_id" optional="hide"/>
                                <field name="account_cost_expense_not_deductible_id" optional="hide"/>
                                <field name="account_witholding_source_id" optional="hide"/>
                                <field name="account_withholding_assumed_income_id" optional="hide"/>
                                <field name="account_iva_withholding_common_regime_id" optional="hide"/>
                                <field name="account_non_domiciled_iva_Withholding_id" optional="hide"/>
                            </tree>
                        </field>
                        <field name="partners_shareholders_line_ids" attrs="{'invisible':[('partner_report','=',False)]}" invisible="1">
                            <tree editable="bottom">
                                <field name="partner_id"/>
                                <field name="number_share" sum="Total Number Share"/>
                                <field name="participation_percentage" sum="Total Participation Percentage"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="account_concept_line_exogenus_from_view">
            <field name="name">account.concept.line.exogenus.from.view</field>
            <field name="model">account.concept.exogenus.line</field>
            <field eval="4" name="priority"/>
            <field name="arch" type="xml">
                <form string="Line Concept" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="account_code"/>
                                <field name="account_id"/>
                                <field name="lesser_amount" force_save="1" />
                                <field name="account_cost_expense_deductible_id"/>
                                <field name="account_witholding_source_id"/>
                                <field name="account_iva_withholding_common_regime_id"/>
                            </group>
                            <group>
                                <field name="concept_exogenus_id"/>
                                <field name="account_code"/>
                                <field name="deductible"/>
                                <field name="account_cost_expense_not_deductible_id"/>
                                <field name="account_withholding_assumed_income_id"/>
                                <field name="account_non_domiciled_iva_Withholding_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_concept_exogenus_tree_view" model="ir.ui.view">
            <field name="name">account.concept.exogenus.tree.view</field>
            <field name="model">account.concept.exogenus</field>
            <field eval="102" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Exogenus Concept">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="format_exogenus_id"/>
                </tree>
            </field>
        </record>

        <record id="account_concept_line_tree_view" model="ir.ui.view">
            <field name="name">account.concept.line.tree.view</field>
            <field name="model">account.concept.exogenus.line</field>
            <field eval="103" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Line Concept Exogenus" create="false" edit="false">
                    <field name="name"/>
                    <field name="concept_exogenus_id"/>
                    <field name="account_id"/>
                    <field name="account_code"/>
                    <field name="lesser_amount"/>
                    <field name="deductible"/>
                    <field name="account_cost_expense_deductible_id" optional="show"/>
                    <field name="account_cost_expense_not_deductible_id" optional="hide"/>
                    <field name="account_witholding_source_id" optional="hide"/>
                    <field name="account_withholding_assumed_income_id" optional="hide"/>
                    <field name="account_iva_withholding_common_regime_id" optional="hide"/>
                    <field name="account_non_domiciled_iva_Withholding_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="account_concept_line_view_search" model="ir.ui.view">                                
          <field name="name">concept.exogenus.search</field>                                
          <field name="model">account.concept.exogenus</field>                                
          <field name="arch" type="xml">                                    
            <search string="Search_concepts_exogenus">
                    <field name="name"/>
                    <field name="code"/>                                                    
                    <filter string="Name" domain="[('name', '!=', '')]" name="has_name"></filter>                               
                    <filter string="Code" domain="[('code', '!=', False)]" name="has_code"></filter>
                                    
                <group expand="0" string="Group By">                                            
                    <filter string="Format" name="format_exogenus_id" context="{'group_by': 'format_exogenus_id'}"></filter>                                             
                </group>                                    
            </search>                                
          </field>                            
        </record>

        <record id="concept_exogenus_action" model="ir.actions.act_window">
            <field name="name">Concept Exogenus</field>
            <field name="res_model">account.concept.exogenus</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="concept_line_exogenus_action" model="ir.actions.act_window">
            <field name="name">Line Concept Exogenus</field>
            <field name="res_model">account.concept.exogenus.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="account_concept_line_menu" action="account_exogenus_settings.concept_line_exogenus_action" name="Account concept settings" sequence="153" parent="account_exogenus_settings.account_exogenus_menu" groups="account.group_account_manager"/>
        <menuitem id="account_concept_exogenus_menu" action="account_exogenus_settings.concept_exogenus_action" name="Concept Exogenus" sequence="151" parent="account_exogenus_settings.account_exogenus_menu" groups="account.group_account_manager"/>
        
    </data>
</odoo>
