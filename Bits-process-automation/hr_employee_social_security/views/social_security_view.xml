<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!--Vista TREE-->
        <record model="ir.ui.view" id="hr_employee_social_security_tree">
            <field name="name">hr.employee.social.security.tree</field>
            <field name="model">social.security</field> 
            <field name="arch" type="xml">
                <tree string="Social Security">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="entity_type"/>
                </tree>
            </field>
        </record>

    <!--Vista FORM-->
        <record model="ir.ui.view" id="hr_employee_social_security_form">
            <field name="name">hr.employee.social.security.form</field>
            <field name="model">social.security</field> 
            <field name="arch" type="xml">
                <form string="Social Security">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="entity_type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!--Accion para ingresar a las vistas del modulo creado-->
        <record model="ir.actions.act_window" id="action_social_security">
            <field name="name">Social Security</field>
            <field name="res_model">social.security</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_social_security_tree_action" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="hr_employee_social_security_tree"/>
            <field name="act_window_id" ref="action_social_security"/>
        </record>
        

    <!--Configuracion del menu, para agregar la opcion del modulo creado-->
        <menuitem
        action="action_social_security"
        id="action_menu_social_security"
        parent="hr.menu_human_resources_configuration"
        name="Social Security"
        sequence="3"
        />
        
    </data>
</odoo>