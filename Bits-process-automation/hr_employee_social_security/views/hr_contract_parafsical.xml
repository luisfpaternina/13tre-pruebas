<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_contract_parafiscal" model="ir.ui.view">
            <field name="name">hr_contract_parafiscal</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='other']/group" position="inside">
                    <group name="parafiscal" string="Other Data">
                        <field name="risk_class"/>
                        <field name="rate"/>
                        <field name="pension_special_rate_indicator"/>
                        <field name="pensions_contrib"/>
                        <field name="colombian_abroad"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>