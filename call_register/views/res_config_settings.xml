<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_call_register_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.call.register</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Register Token" string="Call Register"
                     data-key="call_register">
                    <h2>Call Register</h2>
                    <div class="row mt16 o_settings_container" name="managa_mail_campaigns_setting_container">
                        <div class="col-lg-12 o_setting_box col-12">
                            <div class="o_setting_right_pane">
                               <label for="call_token"/>
                               <div>
                                   <field name="call_token"/>
                                </div>
                                <label for="endpoint_calls"/>
                                <div>
                                    <field name="endpoint_calls"/>
                                </div>
                                <label for="last_cdr_id"/>
                                <div>
                                    <field name="last_cdr_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
