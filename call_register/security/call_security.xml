<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_call_register" model="ir.module.category">
            <field name="name">Calls</field>

        </record>

        <record id="group_call_register_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="call_register.module_call_register"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_call_register_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="call_register.module_call_register"/>
            <field name="implied_ids" eval="[(4, ref('group_call_register_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>


        <record id="call_register_restrict_user" model="ir.rule">
            <field name="name">Call Register User</field>
            <field name="model_id" ref="model_call_register"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_call_register_user'))]"/>
        </record>

        <record id="call_register_restrict_manager" model="ir.rule">
            <field name="name">Call Register Manager</field>
            <field name="model_id" ref="model_call_register"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4,ref('group_call_register_manager'))]"/>
        </record>


    </data>
</odoo>
