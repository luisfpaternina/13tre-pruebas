<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sale.inherit.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10" />
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']/div[2]/div[5]" position="after">
                <div class="col-6 col-lg-6 o_setting_box" id="minimum_gross_profit_margin_configuration">
                    <group>
                        <field name="min_gross_margin" />
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>