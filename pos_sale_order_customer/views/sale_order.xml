<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inherit_sale_order" model="ir.ui.view">
        <field name="name">view.inherit.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='other_information']" position="after">
                <page name="information_pos" string="Information POS">
                    <group name="general">
                        <group>
                            <field name="invoice_origin_pos"/>
                            <field name="is_pos_order_link" invisible="1"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
