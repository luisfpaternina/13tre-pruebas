<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='location_id']" position="after">
                    <field name="invoice_name"/>
                    <field name="invoice_state"/>
                    <field name="is_validate"/>
                </xpath>

                <xpath expr="//button[@name='button_validate']" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_validate', '=', False)]}</attribute>
                </xpath>

                <xpath expr="//form/header/button[3]" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_validate', '=', False)]}</attribute>
                </xpath>

                <xpath expr="//form/header/button[4]" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_validate', '=', False)]}</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>

