    <template id="product_brand_attribute" inherit_id="website_sale.products_attributes">
        <xpath expr="//form/ul" position="before">
            <t t-set="multibrand_list" t-value="request.website.get_multibrand()"/>
            <label for="selector_marca_automovil" style="margin-top:10px !important; margin-bottom:10px; !important">Marca Automóvil</label>
            <select id="selector_marca_automovil" name="attrib" class="form-control">
                <option value=""/>
                <t t-foreach="multibrand_list" t-as="multibrand">
                    <li class="nav-item">
                        <label style="margin: 0 20px;" t-attf-class="nav-link#{' active' if [0,multibrand.id] in attrib_values else ''}">
                            <option t-att-value="'999999-%s' % (multibrand.id)" t-att-selected="multibrand.id in attrib_set">
                                <t t-raw='multibrand.name'/>
                            </option>
                        </label>
                    </li>
                </t>
            </select>
        </xpath>
        <!--<xpath expr="//div[@id='product_brand_attribute']" position="attributes">
            <attribute name="style">display:none</attribute>
        </xpath>-->
    </template>
    <template id="website_sale_products_search_box_2" inherit_id="website.website_search_box">
        <xpath expr="//div[@role='search']" position="inside">
            <t t-if="attrib_values">
                <t t-foreach="attrib_values" t-as="a">
                    <input type="hidden" name="attrib" t-att-value="'%s-%s' % (a[0], a[1])" />
                </t>
            </t>
        </xpath>
    </template>

</odoo>
