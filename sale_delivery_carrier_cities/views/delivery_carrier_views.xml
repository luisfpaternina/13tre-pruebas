<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_delivery_carrier_citie_to_form" model="ir.ui.view">
			<field name="name">view.delivery.carrier.citie.to.form</field>
			<field name="model">delivery.carrier</field>
			<field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='state_ids']" position="after">
					<field name="town_to_ids" widget="many2many_tags"/>
				</xpath>
				<xpath expr="//field[@name='state_ids']" position="replace">
					<field name="state_ids" widget="many2many_tags" string="Departaments"/>
				</xpath>
				<xpath expr="//field[@name='integration_level']" position="after">
					<field name="price_kilogram" attrs="{'invisible': [('delivery_type', '=', 'fixed')]}"/>
				</xpath>
				<xpath expr="//field[@name='price_rule_ids']" position="attributes">
					<attribute name="context">
						{'default_list_price': price_kilogram}
					</attribute>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
 