<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_hide_price_product_price" inherit_id="website_sale.product_price">
      <xpath expr="//div[@itemprop='offers']" position="attributes">
        <attribute name="t-if">
          not website.is_hide_price_web or product.show_price_in_public_web
        </attribute>
      </xpath>
    </template>
    <template id="website_hide_price_products_item" inherit_id="website_sale.products_item">
        <xpath expr="//div[@itemprop='offers']" position="attributes">
            <attribute name="t-if">
                not website.is_hide_price_web or product.show_price_in_public_web
            </attribute>
        </xpath>
    </template>


    <template id="website_hide_price_product" inherit_id="website_sale.product">
        <xpath expr="//a[@id='add_to_cart']" position="attributes">
            <attribute name="t-if">
                not website.is_hide_price_web or product.show_price_in_public_web
            </attribute>
        </xpath>

        <xpath expr="//div[hasclass('css_quantity')]" position="attributes">
            <attribute name="t-if">
                not website.is_hide_price_web or product.show_price_in_public_web
            </attribute>
        </xpath>
    </template>
